.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:sounds, :index)
      %li=link_to pat(:new), url(:sounds, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:sounds)
    .inner
      %table.table
        %tr
          %th.first=mat(:sound, :id)
          %th=mat(:sound, :url)
          %th=mat(:sound, :name)
          %th=mat(:sound, :family)
          %th=mat(:sound, :extra)
          %th=mat(:sound, :created_at)
          %th=mat(:sound, :updated_at)
          %th.last="&nbsp;"
        -@sounds.each do |sound|
          %tr
            %td.first=sound.id
            %td=sound.url
            %td=sound.name
            %td=sound.family
            %td=sound.extra
            %td=sound.created_at
            %td=sound.updated_at
            %td.last
              =button_to pat(:edit), url(:sounds, :edit, :id => sound.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:sounds, :destroy, :id => sound.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
